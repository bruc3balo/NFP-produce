<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:background="#2DF4F4F4"
    android:padding="4dp"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_margin="1dp"
        android:padding="2dp"
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/commodityImage_wish_cart"
            android:background="#00FFFFFF"
            android:layout_margin="3dp"
            android:layout_gravity="center"
            android:padding="4dp"
            android:scaleType="fitXY"
            android:src="@mipmap/nfp_png"
            android:layout_width="150dp"
            android:layout_height="120dp" />

        <View
            android:layout_marginStart="10dp"
            android:background="#0CCAC0C0"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_gravity="center"
            android:padding="4dp"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/commodityName_wish_cart"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:padding="4dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="comodity Name"
                android:textAllCaps="true"
                android:textSize="17sp"
                android:fontFamily="sans-serif-black"/>
            <TextView
                android:id="@+id/commodityPrice_wish_cart"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Price"/>



            <LinearLayout
                android:id="@+id/commodityNumber_wish_cart"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="0dp">

                <ImageButton
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_key_left"
                    android:layout_height="match_parent"
                    tools:ignore="NestedWeights" />

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Number of items"
                    android:gravity="center"
                    android:layout_gravity="center"
                    tools:ignore="NestedWeights" />

                <ImageButton
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:background="@android:color/transparent"
                    android:rotationY="180"
                    android:src="@drawable/ic_key_left"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"
                    tools:ignore="NestedWeights" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:padding="5dp"
        android:layout_margin="1dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/remove_wish_cart"
            android:layout_gravity="center"
            android:background="#00FFFFFF"
            android:src="@android:drawable/ic_menu_delete"
            android:tint="#B54848"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>


    </LinearLayout>



</LinearLayout>
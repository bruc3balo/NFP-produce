<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    android:padding="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/commodityImage_wish"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:background="#00FFFFFF"
        android:padding="4dp"
        android:scaleType="fitXY"
        android:src="@mipmap/nfp_png" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:background="#0CCAC0C0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:orientation="vertical"
        android:padding="4dp">

        <TextView
            android:id="@+id/commodityName_wish"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:text="comodity Name"
            android:textAllCaps="true"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/commodityPrice_wish"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="4dp"
            android:gravity="center_vertical"
            android:text="Price" />


        <TextView
            android:id="@+id/commodityNumber_wish"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="4dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Number of items" />

    </LinearLayout>
</LinearLayout>